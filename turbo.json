{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/*/dist/**",
        "apps/*/.next/**",
        "apps/*/.output/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*",
        "pnpm-lock.yaml",
        "tsconfig.json"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}